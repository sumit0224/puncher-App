generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  phone         String   @unique
  email         String?  @unique
  passwordHash  String
  location      String?  // Stored as "lat,long" for simple text, or use PostGIS if enabled
  ratingAvg     Float    @default(5.0)
  walletBalance Float    @default(0.0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  jobs          Job[]
  payments      Payment[]
}

model Vendor {
  id              Int      @id @default(autoincrement())
  name            String
  phone           String   @unique
  passwordHash    String?  // Made optional for OTP-only flows, but recommended for password login
  shopName        String?
  documents       Json?    // Stores links to Aadhar, DL, PAN images
  bankInfo        Json?
  serviceTypes    String[] // Array of service names e.g. ["Puncture", "Towing"]
  ratingAvg       Float    @default(5.0)
  isVerified      Boolean  @default(false)
  isActive        Boolean  @default(false)
  currentLocation String?  // "lat,long"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  jobs          Job[]
  payments      Payment[]
}

enum JobStatus {
  REQUESTED
  ASSIGNED
  ON_WAY
  ARRIVED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Job {
  id            Int       @id @default(autoincrement())
  userId        Int
  vendorId      Int?
  serviceType   String
  priceEstimate Float?
  finalPrice    Float?
  status        JobStatus @default(REQUESTED)
  location      String    // Job location "lat,long"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  vendor Vendor? @relation(fields: [vendorId], references: [id])
  payment Payment?
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

model Payment {
  id        Int           @id @default(autoincrement())
  jobId     Int           @unique
  userId    Int
  vendorId  Int?
  amount    Float
  method    String        // "CASH", "ONLINE"
  status    PaymentStatus @default(PENDING)
  createdAt DateTime      @default(now())

  job    Job    @relation(fields: [jobId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
  vendor Vendor? @relation(fields: [vendorId], references: [id])
}
